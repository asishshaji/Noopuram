<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20sp"
    android:padding="20sp"
    tools:context="in.co.matchboxmedia.noopuram.leader_frag_first_second_third">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="172dp"
        android:orientation="vertical"
        android:background="#000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#000"
            android:id="@+id/lay1"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Points"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:id="@+id/lay2"
            android:background="#0000"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/branch_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"

                android:text=""
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/points1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="#000"
            android:id="@+id/lay3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/branch_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/points2"
                android:layout_width="20dp"
                android:layout_height="wrap_content"

                android:text=""
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="#000"
            android:id="@+id/lay4"
            android:layout_marginBottom="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/branch_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/points3"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>