<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.co.matchboxmedia.noopuram.button_frag_draw">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="പെയിന്റിംഗ് - ജലച്ചായം"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="പെയിന്റിംഗ്-എണ്ണച്ചായം"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="കാർട്ടൂൺ രചന"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="Pencil drawing"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="ക്ലേ മോഡലിംഗ്"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="കൊളാഷ്"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="എംബ്രോയിഡറി"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="പോസ്റ്റർ രചന"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="രംഗോലി"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />


            <Button
                android:id="@+id/button_10"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="Spot photography"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_11"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="ഫേസ്  പെയിന്റിങ്"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_12"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="മെഹന്ദി"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/button_13"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#000000"
                android:text="Wall Painting"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
